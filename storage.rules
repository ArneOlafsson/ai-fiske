rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /catches/{uid}/{allPaths=**} {
      // Only owner can read/write.
      // Note: Admin access requires custom claims (request.auth.token.admin == true) 
      // or using the Admin SDK (which bypasses rules).
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
  }
}
